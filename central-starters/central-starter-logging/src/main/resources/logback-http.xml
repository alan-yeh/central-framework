<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Http Appender 需要的属性 -->
    <springProperty scope="context" name="HTTP_PATH" source="central.logging.http.path" defaultValue="mcube"/>

    <!-- 日志需要的属性 -->
    <springProperty scope="context" name="APP_CODE" source="central.logging.http.code" defaultValue=""/>
    <springProperty scope="context" name="APP_KEY" source="central.logging.http.key" defaultValue=""/>
    <springProperty scope="context" name="SERVICE_NAME" source="spring.application.name" defaultValue=""/>
    <springProperty scope="context" name="SERVICE_VERSION" source="spring.application.version" defaultValue=""/>
    <springProperty scope="context" name="SERVER_PORT" source="server.port" defaultValue="8080"/>

    <springProperty scope="context" name="LOG_HOME" source="central.logging.path" defaultValue="./logs"/>

    <!-- 定义属性 -->
    <property name="LOG_PATTERN"
              value="%n[${SERVICE_NAME}] %space(%X{traceId}){}%d{HH:mm:ss.SSS}${LOG_LEVEL_PATTERN:-%p} ${PID:- } [%thread] %logger:%n%msg%n"/>
    <property name="LOG_CONSOLE_PATTERN"
              value="%n%clr([${SERVICE_NAME}]){green} %space(%X{traceId}){}%clr(%d{HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%p}) %clr(${PID:- }){magenta} %clr([%thread]){magenta} %clr(%logger){cyan}:%n%msg%n"/>

    <!-- 彩色日志 -->
    <!-- 彩色日志依赖的渲染类 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <!-- 去空格 -->
    <conversionRule conversionWord="space" converterClass="com.minstone.mcube.starter.logger.logback.converter.SpaceCompositeConverter"/>

    <!-- 控制台日志 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_CONSOLE_PATTERN}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${LOG_LEVEL}</level>
        </filter>
    </appender>

    <!-- 文件日志 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${SERVICE_NAME}.current.log</file>

        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_HOME}/history/${SERVICE_NAME}.%d{yyyy-MM-dd_HH}.log.gz
            </fileNamePattern>
            <maxHistory>720</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Http 日志 -->
    <appender name="HTTP" class="com.minstone.mcube.starter.logger.logback.appender.http.HttpAppender">
        <applicationName>${SERVICE_NAME}</applicationName>
        <path>${HTTP_PATH}</path>
        <code>${APP_CODE}</code>
        <key>${APP_KEY}</key>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="HTTP"/>
    </root>
</configuration>